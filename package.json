{
  "name": "graphql-fastify-server",
  "type": "commonjs",
  "version": "v1.4.12",
  "author": "rpvsilva",
  "description": "Lightweight GraphQL server for fastify",
  "license": "MIT",
  "homepage": "https://github.com/rpvsilva/graphql-fastify-server#readme",
  "bugs": {
    "url": "https://github.com/rpvsilva/graphql-fastify-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rpvsilva/graphql-fastify-server.git"
  },
  "keywords": [
    "graphql",
    "fastify",
    "server"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "webpack build",
    "build:types": "dts-bundle-generator --no-banner -o dist/index.d.ts src/types/index.ts",
    "build:all": "NODE_ENV=production npm-run-all -s build build:types",
    "dev": "npm-run-all --parallel watch:build watch:server",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon \"./dist/index.js\" --watch \"./dist\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/websocket": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "fastify": "^4.10.2",
    "graphql": "^16.6.0",
    "graphql-jit": "^0.8.0",
    "ioredis": "^5.2.4",
    "mqemitter": "^5.0.0",
    "node-cache": "^5.1.2",
    "readable-stream": "^4.2.0",
    "tiny-lru": "^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/readable-stream": "^2.3.15",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "dts-bundle-generator": "^8.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^2.7.1",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.1",
    "typescript": "^5.0.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-node-externals": "^3.0.0"
  }
}